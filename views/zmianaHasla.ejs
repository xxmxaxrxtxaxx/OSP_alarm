<!DOCTYPE html>
<html lang="en">

<%- include('naglowek', {});  %>


<body id="page-top">

    <%- include('menu', menu);  %>

    <header class="masthead2">
        <div class="container h-10">
            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-10 align-self-end">
                    <h2 class="text-uppercase text-white font-weight-bold">Zmiana hasła</h2><br><br><br>

                </div>



                <form action="/uzytkownik/zapiszHaslo/<%=uzytkownik.id%>" method="POST">
                    <div class="form-group row">
                        <label for="login" class="col-sm-2 col-form-label text-white">Login:</label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext text-white" id="login"
                                value="<%=uzytkownik.login%>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="przykladoweHaslo" class="col-sm-2 col-form-label text-white">Hasło:</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="stareHaslo" name="haslo" placeholder="Stare hasło">
                        </div>
                        
                    </div>
                    <br><br>


                    <div class="form-group row">
                        <label for="pole1" class="text text-white">Nowe hasło</label>
                        <input type="password" class="form-control" id="noweHaslo" name="noweHaslo" placeholder="Nowe hasło">
                    </div>
                    <div class="form-group row">
                        <label for="pole2" class="text text-white">Powtórz nowe hasło</label>
                        <input type="password" class="form-control" id="powtorzHaslo" name="powtorzHaslo" placeholder="Powtórz nowe hasło">
                    </div>
                    <br><br>
                    <input type="hidden" value="<%=uzytkownik.id%>" name="id">
            </div>
        </div>

        <center>
            <a href="/uzytkownik/<%=uzytkownik.id%>" class="btn btn-secondary ">Powrót</a>
            <button type="submit" class="btn btn-primary btn-lg js-scroll-trigger">Zapisz zmiany</button>
  
        </center>
  </form>
    </header>

</body>

</html>