<!DOCTYPE html>
<html lang="en">

<%- include('naglowek', {});  %>


<body id="page-top">

    <%- include('menu', menu);  %>
   
    <header class="masthead2">
        <div class="container h-10">

            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-10">
                    <h2 class="text-uppercase text-white font-weight-bold">Wybierz funkcje</h2>
                    <br><br><br><br>

                </div>
            </div>

            <form action="/strazacy/<%=strazak.idJednostki%>/<%=strazak.idUzytkownika%>/zapisz" method="POST">
                <div class="form-group row">

                    <div class="col-sm-8">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="admin" id="admin" value="1" >
                            <label class="form-check-label text-white" for="admin">
                                Administrator tej jednostki
                            </label></div><br>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="czyKpp" id="kpp" value="1" <%if(strazak.czyKpp){%>checked="checked"<%}%>>
                            <label class="form-check-label text-white" for="kpp">
                                KPP
                            </label></div><br>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="czyDowodca" id="dowodca" value="1" 
                            <%if(strazak.czyDowodca){%>
                                checked="checked"
                                <%}%>
                                >
                            <label class="form-check-label text-white" for="dowodca">
                                Dow√≥dzca tej jednostki
                            </label></div><br>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="czyKierowca" id="kierowca" value="1" 
                            <%if(strazak.czyKierowca){%>
                                checked="checked"
                                <%}%>
                                >
                            <label class="form-check-label text-white" for="kierowca">
                                Kierowca w tej jednostce
                            </label>
                        </div>
                    </div>
                </div>
                <br><br>
                <center>
                    <input type="hidden" value="<%=strazak.idJednostki%>" name="idJednostki">
                    <input type="hidden" value="<%=strazak.idUzytkownika%>" name="idUzytkownika">
                    <button type="submit" class="btn btn-primary btn-lg">Zapisz</button>

                </center>
            </form>

        </div>
    </header>

</body>

</html>