<!DOCTYPE html>
<html lang="en">

<%- include('naglowek', {});  %>


<body id="page-top">
    <!-- Navigation-->
    <%- include('menu', menu);  %>
    <!-- nagłówek-->

    <header class="masthead2">
   
    
 
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10 text-center">
                    <h2 class="text-white mt-0">Przypisane jednostki</h2>
                    <hr class="divider light my-2" />
                   

                        <table class="table table-striped table-dark">
                            <thead>
                                <tr>
                                    
                                    <th scope="col">Nazwa jednostki</th>
                                    <th scope="col">Adres</th>
                                    <th scope="col"> Historia alarmów</th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                    
                           
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i=0;i<lista.length;i++){ %>                                
                                <tr>
                                    <td><%= lista[i].nazwa %></td>
                                    <td><%= lista[i].adres %></td>                   
                                    <td><a href="/zdarzenia/<%=lista[i].id%>"> <img src="/img/history.png" alt="Historia alarmów"></a></td>
                                    <td>
                                        <%if(uzytkownik.czyAlarmujacy(lista[i].id)){%>
                                        <a class="btn btn-primary js-scroll-trigger" href="/zdarzenia/<%=lista[i].id%>/dodaj">Uruchom alarm!</a>
                                     <%}%>
                                    </td>       
                                    <td><a href="/strazacy/<%=lista[i].id%>"><img src="/img/group.png" alt="Zobacz strażaków"></a>
                                        <%if(uzytkownik.czyAdminJednostki(lista[i].id) || uzytkownik.czyAdmin){%>
                                        <a href="/jednostki/edycja/<%=lista[i].id%>"><img src="/img/settings.png" alt="Edytuj">  </a>
                                        <%}%>
                                        <%if(uzytkownik.czyAdmin){%>
                                        <a href="/jednostki/usun/<%=lista[i].id%>">  <img src="/img/delete.png" alt="Usuń"></a>
                                        <%}%>
                                    </td>
                                </tr>                             
                                <% }   %>
                            </tbody>
                        </table>

                    </p>
                    <%if(uzytkownik.czyAdmin){%>
                    <a class="btn btn-light btn-xl js-scroll-trigger" href="/jednostki/edycja">Dodaj Jednostkę</a>
                    <%}%>
                </div>
            </div>
        </div>

    </header>
</body>
</html>