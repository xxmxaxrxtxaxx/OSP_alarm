<!DOCTYPE html>
<html lang="en">

<%- include('naglowek', {});  %>

<body id="page-top">
    <%- include('menu', menu);  %>

    <header class="masthead2">
    

    
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h2 class="text-white mt-0">Lista zdarzeń</h2>
                    <hr class="divider light my-4" />
                    <p class="text-white-50 mb-4">

                        <table class="table table-striped table-dark">
                            <thead>
                                <tr>
                                    
                                    <th scope="col">Data</th>
                                    <th scope="col">Opis</th>
                                    <th scope="col">Zobacz szczegóły</th>
                       
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i=0;i<listaZdarzen.length;i++){ %>                                
                                <tr>
                                    
                                    <td><%= listaZdarzen[i].data %></td>
                                    <td><%= listaZdarzen[i].opis %></td>
                                   <td><a href="/zdarzenia/szczegoly/<%=listaZdarzen[i].id%>">  <img src="/img/view-details.png" alt="Szczegoly"></a></td></td>
                                </tr>
                                <% }   %>

                            </tbody>
                        </table>
                        <a class="btn btn-primary btn-lg js-scroll-trigger" href="/zdarzenia/dodaj">Uruchom alarm!</a>
                      
                    </p>
                </div>
            </div>
        </div>
    </section>
</header>
</body>
</html>